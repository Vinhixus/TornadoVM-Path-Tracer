<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@GUI.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vinhderful.raytracer.Controller">
    <center>
        <Pane fx:id="pane" BorderPane.alignment="CENTER">
            <Canvas fx:id="canvas" height="512" width="1024" />
        </Pane>
    </center>
    <right>
        <VBox prefWidth="300.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera X">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </Label>
            <Slider id="camX" fx:id="camX" majorTickUnit="1.0" max="4.0" min="-4.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera Y" />
            <Slider id="camY" fx:id="camY" majorTickUnit="1.0" max="4.0" min="-4.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera Z" />
            <Slider id="camZ" fx:id="camZ" majorTickUnit="1.0" max="0.0" min="-8.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="-4.0" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera Yaw " />
            <Slider id="camYaw" fx:id="camYaw" majorTickUnit="30.0" max="90.0" min="-90.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera Pitch" />
            <Slider id="camPitch" fx:id="camPitch" majorTickUnit="30.0" max="60.0" min="-60.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera FOV" />
            <Slider id="camFOV" fx:id="camFOV" majorTickUnit="10.0" max="90.0" min="30.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" value="60.0" />
            <Separator layoutX="30.0" layoutY="232.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Separator>
         <Label alignment="CENTER" contentDisplay="CENTER" text="Soft Shadow Sample" />
         <Slider id="camFOV" fx:id="ssSample" blockIncrement="1.0" majorTickUnit="4.0" max="25.0" min="1.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </Separator>
            <Label fx:id="fps" text="FPS: 0.00" />
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </Separator>
        </VBox>
    </right>
</BorderPane>
