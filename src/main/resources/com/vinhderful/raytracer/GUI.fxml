<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane onKeyPressed="#keyPressed" onKeyReleased="#keyReleased" stylesheets="@GUI.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vinhderful.raytracer.Controller">
    <center>
        <Pane fx:id="pane" BorderPane.alignment="CENTER">
            <Canvas fx:id="canvas" height="512" onMouseDragged="#mouseDragged" onMousePressed="#mousePressed" onMouseReleased="#mouseReleased" width="1024" />
        </Pane>
    </center>
    <right>
        <VBox prefWidth="300.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera FOV" />
            <Slider id="camFOV" fx:id="camFOV" majorTickUnit="10.0" max="90.0" min="30.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" value="60.0" />
            <Separator layoutX="30.0" layoutY="232.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Soft Shadow Sample Size" />
            <Slider id="camFOV" fx:id="ssSample" blockIncrement="1.0" majorTickUnit="4.0" max="25.0" min="1.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Separator>
            <Label fx:id="fps" text="FPS: 0.00" />
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Device:">
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </Label>
            <ComboBox fx:id="deviceDropdown" onAction="#selectDevice" />
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Debug Output:">
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </Label>
            <Label fx:id="debugOutput" />
        </VBox>
    </right>
</BorderPane>
