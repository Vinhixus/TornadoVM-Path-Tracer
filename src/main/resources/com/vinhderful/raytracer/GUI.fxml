<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane onKeyPressed="#keyPressed" onKeyReleased="#keyReleased" stylesheets="@GUI.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vinhderful.raytracer.Controller">
    <center>
        <Pane BorderPane.alignment="CENTER">
            <Canvas fx:id="canvas" height="720" onMouseDragged="#mouseDragged" onMousePressed="#mousePressed"
                    onMouseReleased="#mouseReleased" width="1280"/>
        </Pane>
    </center>
    <right>
        <VBox fx:id="settingsPanel" BorderPane.alignment="CENTER" prefWidth="320.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Light X"/>
            <Slider id="lightX" fx:id="lightX" majorTickUnit="1.0" max="5.0" min="-5.0" minorTickCount="1"
                    showTickLabels="true" showTickMarks="true" value="1"/>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Light Y"/>
            <Slider id="lightY" fx:id="lightY" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="1"
                    showTickLabels="true" showTickMarks="true" value="3"/>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Light Z"/>
            <Slider id="lightZ" fx:id="lightZ" majorTickUnit="1.0" max="5.0" min="-5.0" minorTickCount="1"
                    showTickLabels="true" showTickMarks="true" value="-1.5"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Camera FOV"/>
            <Slider id="camFOV" fx:id="cameraFOV" majorTickUnit="10.0" max="90.0" min="30.0" minorTickCount="5"
                    showTickLabels="true" showTickMarks="true" value="60.0"/>
            <Separator layoutX="30.0" layoutY="232.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Shadow Sample Size"/>
            <Slider id="shadowSampleSize" fx:id="shadowSampleSize" blockIncrement="1.0" majorTickUnit="50.0" max="400.0"
                    showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Reflection Bounces"/>
            <Slider id="reflectionBounceLimit" fx:id="reflectionBounceLimit" blockIncrement="1.0" majorTickUnit="1.0"
                    max="6.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true"
                    value="1.0"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label fx:id="fps" text="FPS: 0.00"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Device:">
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </Label>
            <ComboBox fx:id="deviceDropdown" onAction="#selectDevice"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Button fx:id="animateButton" mnemonicParsing="false" onAction="#toggleAnimation" text="Animate"/>
            <Separator>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Debug Output:">
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="debugOutput"/>
        </VBox>
    </right>
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close"/>
            </Menu>
            <Menu mnemonicParsing="false" text="View">
                <MenuItem fx:id="settingsPanelToggle" mnemonicParsing="false" onAction="#toggleSettingsPanel"
                          text="Hide Settings Panel"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
